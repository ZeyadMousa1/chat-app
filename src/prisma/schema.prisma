// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  userId            String      @id 
  userName      String
  email         String   @unique
  image         String
  password      String
  isOnline       Boolean  @default(false)
  timestamp     DateTime @default(now())
  chatsSent     Chat[]   @relation("sentChats")
  ChatsReceived Chat[]   @relation("receivedChats")
}

model Chat {
  chatId         String      @id 
  message    String
  timestamp  DateTime @default(now())
  senderId   String
  receiverId String
  sender     User     @relation("sentChats", fields: [senderId], references: [userId])
  receiver   User     @relation("receivedChats", fields: [receiverId], references: [userId])
}
